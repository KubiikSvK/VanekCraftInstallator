<UserControl x:Class="VanekCraftInstaller.Controls.LauncherControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="600">
            <TextBlock Text="Výběr launcheru"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#FFE67E22"
                       FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                       TextAlignment="Center"
                       Margin="0,0,0,30"/>
            
            <TextBlock Text="Vyberte launcher pro spuštění Minecraft modpacku:"
                       FontSize="16"
                       Foreground="#FFDDDDDD"
                       FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                       TextAlignment="Center"
                       Margin="0,0,0,30"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Oficiální Minecraft Launcher -->
                <Border Grid.Column="0"
                        Background="#FF2A2A2A"
                        CornerRadius="10"
                        Padding="20"
                        Cursor="Hand"
                        MouseLeftButtonDown="OfficialLauncher_Click">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF3A3A3A"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    
                    <StackPanel>
                        <RadioButton x:Name="OfficialRadio"
                                     GroupName="LauncherChoice"
                                     IsChecked="True"
                                     Foreground="White"
                                     FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                                     FontSize="16"
                                     FontWeight="Bold"
                                     Margin="0,0,0,15"
                                     Checked="OfficialRadio_Checked">
                            <RadioButton.Content>
                                <TextBlock Text="Oficiální Minecraft Launcher" Foreground="#FFE67E22"/>
                            </RadioButton.Content>
                        </RadioButton>
                        
                        <TextBlock Text="✓ Oficiální podpora Mojang"
                                   FontSize="14"
                                   Foreground="#FF46CC71"
                                   FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="✓ Automatické aktualizace"
                                   FontSize="14"
                                   Foreground="#FF46CC71"
                                   FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="✓ Jednoduché použití"
                                   FontSize="14"
                                   Foreground="#FF46CC71"
                                   FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                                   Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Vyžaduje Microsoft účet"
                                   FontSize="12"
                                   Foreground="#FF888888"
                                   FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                                   FontStyle="Italic"/>
                    </StackPanel>
                </Border>
                
                <!-- SK Launcher -->
                <Border Grid.Column="2"
                        Background="#FF2A2A2A"
                        CornerRadius="10"
                        Padding="20"
                        Cursor="Hand"
                        MouseLeftButtonDown="SKLauncher_Click">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF3A3A3A"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    
                    <StackPanel>
                        <RadioButton x:Name="SKRadio"
                                     GroupName="LauncherChoice"
                                     Foreground="White"
                                     FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                                     FontSize="16"
                                     FontWeight="Bold"
                                     Margin="0,0,0,15"
                                     Checked="SKRadio_Checked">
                            <RadioButton.Content>
                                <TextBlock Text="SK Launcher" Foreground="#FFE67E22"/>
                            </RadioButton.Content>
                        </RadioButton>
                        
                        <TextBlock Text="✓ Jednoduché použití"
                                   FontSize="14"
                                   Foreground="#FF46CC71"
                                   FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="✓ Rychlá instalace"
                                   FontSize="14"
                                   Foreground="#FF46CC71"
                                   FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="✓ Správa modpacků"
                                   FontSize="14"
                                   Foreground="#FF46CC71"
                                   FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="✓ Bez Microsoft účtu"
                                   FontSize="14"
                                   Foreground="#FF46CC71"
                                   FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                                   Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Nevyžaduje oficiální licenci"
                                   FontSize="12"
                                   Foreground="#FF888888"
                                   FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                                   FontStyle="Italic"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <TextBlock x:Name="SelectionText"
                       Text="Vybrán: Oficiální Minecraft Launcher"
                       FontSize="14"
                       Foreground="#FFE67E22"
                       FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                       TextAlignment="Center"
                       Margin="0,30,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>