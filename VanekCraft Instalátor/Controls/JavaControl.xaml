<UserControl x:Class="VanekCraftInstaller.Controls.JavaControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="500">
            <TextBlock Text="Kontrola závislostí"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#FFE67E22"
                       FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                       TextAlignment="Center"
                       Margin="0,0,0,30"/>
            
            <Border Background="#FF2A2A2A" CornerRadius="10" Padding="25" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Java Runtime Environment"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="White"
                               FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                               Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="JavaStatusText"
                                       Text="Kontrolujem Java instalaci..."
                                       FontSize="14"
                                       Foreground="#FFDDDDDD"
                                       FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                                       Margin="0,0,0,5"/>
                            <TextBlock x:Name="JavaVersionText"
                                       Text=""
                                       FontSize="12"
                                       Foreground="#FF888888"
                                       FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu Mono"/>
                        </StackPanel>
                        
                        <Grid Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock x:Name="JavaStatusIcon"
                                   Text="⏳"
                                   FontSize="24"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="LoadingIcon"
                                   Text="⟳"
                                   FontSize="24"
                                   HorizontalAlignment="Center"
                                   Visibility="Collapsed"
                                   RenderTransformOrigin="0.5,0.5">
                            <TextBlock.RenderTransform>
                                <RotateTransform x:Name="LoadingRotation"/>
                            </TextBlock.RenderTransform>
                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="TextBlock.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="LoadingRotation"
                                                           Storyboard.TargetProperty="Angle"
                                                           From="0" To="360" Duration="0:0:1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </TextBlock.Triggers>
                        </TextBlock>
                    </Grid>
                    </Grid>
                    
                    <ProgressBar x:Name="JavaProgressBar"
                                 Height="8"
                                 Margin="0,15,0,0"
                                 Background="#FF1E1E1E"
                                 Foreground="#FFE67E22"
                                 Visibility="Collapsed"/>
                    
                    <TextBlock x:Name="ProgressText"
                               Text=""
                               FontSize="12"
                               Foreground="#FF888888"
                               FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                               Margin="0,5,0,0"
                               Visibility="Collapsed"/>
                </StackPanel>
            </Border>
            
            <Button x:Name="InstallJavaButton"
                    Content="Nainstalovat Java 21"
                    Background="#FFE67E22"
                    Foreground="White"
                    BorderBrush="#FFD35400"
                    BorderThickness="1"
                    Padding="20,12"
                    FontSize="16"
                    FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                    Click="InstallJavaButton_Click"
                    Visibility="Collapsed">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFD35400"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#FFB8460E"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Background" Value="#FF2A2A2A"/>
                                            <Setter Property="Foreground" Value="#FF666666"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>