<UserControl x:Class="VanekCraftInstaller.Controls.IntroControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:VanekCraftInstaller"
             Background="#FF1E1E1E"
             Padding="30">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MaxWidth="500">
            <TextBlock Text="Vítá Tě instalátor VanekCraft"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#FFE67E22"
                       FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                       TextAlignment="Center"
                       Margin="0,0,0,30"/>

            <Border Background="#FF2A2A2A"
                    CornerRadius="10"
                    Padding="25"
                    Margin="0,0,0,20">
                <TextBlock FontSize="16"
                           Foreground="#FFDDDDDD"
                           FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                           TextWrapping="Wrap"
                           LineHeight="24"
                           TextAlignment="Left">
                    <Run Text="Tak jo, vítáme tě u VanekCraft instalátoru!"/><LineBreak/><LineBreak/>
                    <Run Text="Protože proč dělat věci ručně, když můžeš mít pohodlíčko. "/>
                    <Run Text="Vybereš si, jestli to chceš hrát jako spořádaný občan s oficiálním launcherem, "/>
                    <Run Text="nebo jestli půjdeš temnou cestou warezu."/><LineBreak/><LineBreak/>
                    <Run Text="My tě nebudeme soudit, my tě jen připravíme. Tak jdem na to!" FontWeight="SemiBold" Foreground="#FFE67E22"/>
                </TextBlock>
            </Border>
            
            <TextBlock Text="Klikni na 'Další' pro pokračování"
                       FontSize="14"
                       Foreground="#FF888888"
                       FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                       TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>