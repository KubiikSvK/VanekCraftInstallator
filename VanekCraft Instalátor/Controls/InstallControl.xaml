<UserControl x:Class="VanekCraftInstaller.Controls.InstallControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="600">
            <TextBlock Text="Instalace launcheru"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#FFE67E22"
                       FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                       TextAlignment="Center"
                       Margin="0,0,0,30"/>
            
            <Border Background="#FF2A2A2A" CornerRadius="10" Padding="25" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock x:Name="LauncherTypeText"
                               Text="Kontroluji launcher..."
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="White"
                               FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                               Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="StatusText"
                                       Text="Kontroluji přítomnost launcheru..."
                                       FontSize="14"
                                       Foreground="#FFDDDDDD"
                                       FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                                       Margin="0,0,0,5"/>
                            <TextBlock x:Name="PathText"
                                       Text=""
                                       FontSize="12"
                                       Foreground="#FF888888"
                                       FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu Mono"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                        
                        <Grid Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="StatusIcon"
                                       Text="⏳"
                                       FontSize="24"
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="LoadingIcon"
                                       Text="⟳"
                                       FontSize="24"
                                       HorizontalAlignment="Center"
                                       Visibility="Collapsed"
                                       RenderTransformOrigin="0.5,0.5">
                                <TextBlock.RenderTransform>
                                    <RotateTransform x:Name="LoadingRotation"/>
                                </TextBlock.RenderTransform>
                                <TextBlock.Triggers>
                                    <EventTrigger RoutedEvent="TextBlock.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetName="LoadingRotation"
                                                               Storyboard.TargetProperty="Angle"
                                                               From="0" To="360" Duration="0:0:1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </TextBlock.Triggers>
                            </TextBlock>
                        </Grid>
                    </Grid>
                    
                    <ProgressBar x:Name="InstallProgressBar"
                                 Height="8"
                                 Margin="0,15,0,0"
                                 Background="#FF1E1E1E"
                                 Foreground="#FFE67E22"
                                 Visibility="Collapsed"/>
                    
                    <TextBlock x:Name="ProgressText"
                               Text=""
                               FontSize="12"
                               Foreground="#FF888888"
                               FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                               Margin="0,5,0,0"
                               Visibility="Collapsed"/>
                </StackPanel>
            </Border>
            
            <Border x:Name="NickPanel"
                    Background="#FF2A2A2A"
                    CornerRadius="10"
                    Padding="25"
                    Margin="0,0,0,20"
                    Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="Herní nick"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"
                               FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                               Margin="0,0,0,10"/>
                    <TextBox x:Name="NickTextBox"
                             Background="#FF1E1E1E"
                             Foreground="White"
                             BorderBrush="#FF5A5A5A"
                             BorderThickness="1"
                             Padding="10,8"
                             FontSize="14"
                             FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                             MaxLength="16"/>
                    <TextBlock Text="Zadejte svůj herní nick pro offline profil"
                               FontSize="12"
                               Foreground="#FF888888"
                               FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
            
            <Button x:Name="InstallButton"
                    Content="Nainstalovat launcher"
                    Background="#FFE67E22"
                    Foreground="White"
                    BorderBrush="#FFD35400"
                    BorderThickness="1"
                    Padding="20,12"
                    FontSize="16"
                    FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                    Click="InstallButton_Click"
                    Visibility="Collapsed">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFD35400"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#FFB8460E"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Background" Value="#FF2A2A2A"/>
                                            <Setter Property="Foreground" Value="#FF666666"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>