<UserControl x:Class="VanekCraftInstaller.Controls.LicenceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0"
                   Text="Licenční podmínky"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#FFE67E22"
                   FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                   TextAlignment="Center"
                   Margin="0,0,0,20"/>
        
        <Border Grid.Row="1"
                Background="#FF2A2A2A"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ScrollViewer.Resources>
                    <Style TargetType="ScrollBar">
                        <Setter Property="Background" Value="#FF1E1E1E"/>
                        <Setter Property="Foreground" Value="#FF3E3E42"/>
                        <Setter Property="BorderBrush" Value="#FF2A2A2A"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ScrollBar">
                                    <Grid>
                                        <Border Background="#FF2A2A2A" CornerRadius="4"/>
                                        <Track Name="PART_Track" IsDirectionReversed="True">
                                            <Track.Thumb>
                                                <Thumb>
                                                    <Thumb.Template>
                                                        <ControlTemplate TargetType="Thumb">
                                                            <Border Background="#FF5A5A5A" CornerRadius="4">
                                                                <Border.Style>
                                                                    <Style TargetType="Border">
                                                                        <Style.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter Property="Background" Value="#FFE67E22"/>
                                                                            </Trigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Border.Style>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Thumb.Template>
                                                </Thumb>
                                            </Track.Thumb>
                                        </Track>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ScrollViewer.Resources>
                <TextBlock FontSize="13"
                           Foreground="#FFDDDDDD"
                           FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                           TextWrapping="Wrap"
                           LineHeight="22">
                    <Run Text="VanekCraft Modpack – Licenční podmínky" FontWeight="Bold"/><LineBreak/>
                    <Run Text="========================================" Foreground="#FF888888"/><LineBreak/><LineBreak/>
                    <Run Text="Představ si že jsi jeden z těch tří lidí na světě co tohle fakt čtou. Gratulujeme – jsi MVP. Ale pojďme k věci:"/><LineBreak/><LineBreak/>
                    
                    <Run Text="1. Pouze pro osobní užití:" FontWeight="Bold" Foreground="#FFE67E22"/><LineBreak/>
                    <Run Text="   Tento modpack je určen výhradně pro tvoje vlastní hraní. Ne nemůžeš ho nahrát na Technic Launcher ani z něj udělat NFT."/><LineBreak/><LineBreak/>
                    
                    <Run Text="2. Žádná redistribuce:" FontWeight="Bold" Foreground="#FFE67E22"/><LineBreak/>
                    <Run Text="   Neukládej nezveřejňuj nekopíruj nepřeprodávej. Pokud chceš modpack sdílet s kámošem pošli mu odkaz na oficiální stránku. Buď cool."/><LineBreak/><LineBreak/>
                    
                    <Run Text="3. Modpack je jak je:" FontWeight="Bold" Foreground="#FFE67E22"/><LineBreak/>
                    <Run Text="   Jestli ti to vyhodí chybu vybouchne počítač nebo se ti přestane líbit život tak za to fakt neneseme odpovědnost. Instaluješ na vlastní riziko."/><LineBreak/><LineBreak/>
                    
                    <Run Text="4. Autoři modů:" FontWeight="Bold" Foreground="#FFE67E22"/><LineBreak/>
                    <Run Text="   Všechny jednotlivé mody v tomto balíčku patří jejich původním autorům. My jsme je jen sešili dohromady jako Frankensteinovo monstrum ale krásnější."/><LineBreak/><LineBreak/>
                    
                    <Run Text="5. Minecraft je Mojangův:" FontWeight="Bold" Foreground="#FFE67E22"/><LineBreak/>
                    <Run Text="   Jo Minecraft není náš. Patří Mojangu takže jestli chceš žalovat obrať se rovnou na ně – mají na to právníky i kafe zdarma."/><LineBreak/><LineBreak/>
                    
                    <Run Text="6. EULA? Jo ta věc co nikdo nečte:" FontWeight="Bold" Foreground="#FFE67E22"/><LineBreak/>
                    <Run Text="   Jo přesně tohle je taková ta část kde bychom měli napsat že souhlasíš s tímhle vším kliknutím na Pokračovat ale ty stejně víš že jsi to nečetl."/><LineBreak/>
                    <Run Text="   Takže pokud jsi dočetl až sem – fakt respekt."/><LineBreak/><LineBreak/>
                    
                    <Run Text="---" Foreground="#FF888888"/><LineBreak/><LineBreak/>
                    
                    <Run Text="Pokračováním v instalaci potvrzuješ že jsi alespoň viděl tuhle stránku i kdyby jen periferně." FontWeight="SemiBold"/><LineBreak/>
                    <Run Text="A to nám stačí. Díky. 💚" Foreground="#FF46CC71" FontWeight="SemiBold"/>
                </TextBlock>
            </ScrollViewer>
        </Border>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <CheckBox x:Name="AcceptCheckBox" 
                      Content="Hele, klikni na to. Stejně ti to jinak nedovolí pokračovat."
                      Foreground="White"
                      FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                      FontSize="14"/>
        </StackPanel>
    </Grid>
</UserControl>