<Window x:Class="VanekCraftInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VanekCraftInstaller"
        mc:Ignorable="d"
        Title="VanekCraft Installer" 
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">

    <Window.Resources>
        <BlurEffect x:Key="BackgroundBlur" Radius="25"/>

        <Style x:Key="BaseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#1A1A1A"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#Ubuntu Mono"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="19"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              SnapsToDevicePixels="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#ff6f61"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="#ff6f61"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#c0392b"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="#c0392b"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ContinueButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E67E22"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="#E67E22"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#D35400"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="#D35400"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBlock" x:Key="RegularText">
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#Ubuntu"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Image Source="pack://application:,,,/Assets/bg.jpg"
               Stretch="UniformToFill"
               Effect="{StaticResource BackgroundBlur}"/>

        <TextBlock Text="VanekCraft"
                   FontFamily="pack://application:,,,/Assets/Fonts/#Minecraft Evenings"
                   FontSize="55"
                   Foreground="Black"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,35,0,0"
                   Panel.ZIndex="2"/>

        <Border Width="500" Height="310"
                Background="#80FFFFFF"
                CornerRadius="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="20"
                Panel.ZIndex="1">
            <StackPanel>
                <TextBlock Text="Vítej v instalátoru VanekCraft!"
                           FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu"
                           FontSize="20"
                           FontWeight="Bold"
                           FontStyle="Italic"
                           Foreground="#2C3E50"
                           TextAlignment="Center"
                           Margin="0,0,0,10"/>

                <Separator Margin="0,10" Height="1.5" Background="#2C3E50"/>

                <TextBlock Style="{StaticResource RegularText}"
                           TextAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,60,0,0"
                           Text="Jo, tak ty sis fakt spustil VanekCraft instalátor? Respekt!&#x0A;Ať tak nebo tak, my ti to připravíme. Sedni si, uvolni se… my zatím zařídíme špinavou práci."/>
            </StackPanel>
        </Border>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,30"
                    Panel.ZIndex="2">
            <Button Style="{StaticResource CancelButtonStyle}" 
                    Content="Ukončit instalaci" 
                    Width="200" Height="40" Margin="10" FontSize="15" Click="CancelInstallation_Click"/>
            <Button Style="{StaticResource ContinueButtonStyle}" 
                    Content="Spustit instalaci" 
                    Width="200" Height="40" Margin="10" FontSize="15" Click="StartInstallation_Click"/>
        </StackPanel>

        <Button x:Name="CloseButton" 
                Content="X" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Margin="10" 
                Width="30" Height="30"
                Style="{StaticResource CancelButtonStyle}"
                Click="CloseButton_Click"/>
    </Grid>
</Window>