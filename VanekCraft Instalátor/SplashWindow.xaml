<Window x:Class="VanekCraftInstaller.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="305" Height="278"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        Topmost="True">

    <Border Background="#1E1E1E" CornerRadius="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="272">
            <Grid Width="300" Height="200" Margin="0,0,0,20">
                <Rectangle Width="300" Height="200" RadiusX="20" RadiusY="20">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="pack://application:,,,/Assets/splash.png" Stretch="Fill"/>
                    </Rectangle.Fill>
                </Rectangle>
            </Grid>
            <TextBlock Text="Načítání instalátoru..." 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Foreground="#FFFFFF" 
                       HorizontalAlignment="Center" 
                       Margin="1,-10,0,10"
                       FontFamily="pack://application:,,,/Assets/Fonts/#Ubuntu" FontStyle="Italic"/>
            <!-- Opraveno -->
            <ProgressBar x:Name="progressBar"
                         Width="200"
                         Height="10"
                         Minimum="0" Maximum="100"
                         Margin="0,10,0,40"
                         Foreground="#E95420"
                         Background="#2E3436"
                         BorderBrush="Transparent"/>
        </StackPanel>
    </Border>
</Window>